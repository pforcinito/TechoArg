                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "No se encontraron contribuyentes",
                    "paginate": {
                        "first": "Primera",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                    "aria": {
                        "sortAscending": ": Ordenar de forma ascendente",
                        "sortDescending": ": Ordenar de forma descendente"
                    }
                },
                columns: [
                    {
                        title: "Id",
                        data: "id"
                    },
                    {
                        title: "Nombre",
                        data: "nombre"
                    },
                    {
                        title: "Apellido",

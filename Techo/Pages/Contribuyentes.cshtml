                        data: "telefono"
                    },
                    {
                        title: "Email",
                        data: "email"
                    },
                    {
                        data: "id",
                        orderable: false,
                        render: function (data) { return '<button type="button" class="btn btn-primary btn-sm" data-toggle="editContribuyenteModal" data-url="@Url.Page("Contribuyentes", new { handler = "ContribuyenteModal"})&Id=' + data + '">Editar</button>'; }
                    }
                ]
